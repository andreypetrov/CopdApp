<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/login_top_margin"
    tools:context="com.petrodevelopment.copdapp.activities.LoginActivity">

    <ImageView android:id="@+id/lungs_icon"
        android:layout_width="@dimen/lung_width"
        android:layout_height="@dimen/lung_height"
        android:background="@drawable/white_lungs"
        android:layout_gravity="center"/>

    <FrameLayout android:id="@+id/user_interface"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout>
