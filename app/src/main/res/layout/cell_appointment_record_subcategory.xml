<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:descendantFocusability="afterDescendants"
    android:orientation="horizontal">

    <include layout="@layout/line_vertical"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/cell_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/subcategory_row"
            android:background="@drawable/white_button"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/category_icon"
                android:layout_height="@dimen/category_icon"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/activity_horizontal_margin"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="@string/dummy_text"
                android:textSize="@dimen/abc_text_size_medium_material"
                />

            <ImageView
                android:layout_width="@dimen/category_icon"
                android:layout_height="@dimen/category_icon"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:src="@drawable/ic_chevron_right"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cell_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:orientation="vertical"
            android:visibility="gone">

            <include layout="@layout/line_horizontal"/>

            <EditText
                android:id="@+id/note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/box_top_and_bottom_padding"
                android:layout_marginTop="@dimen/box_top_and_bottom_padding"
                android:background="@color/transparent"
                android:gravity="top|left"
                android:hint="@string/appointment_note_hint"
                android:inputType="textMultiLine"
                android:minLines="3"
                    />

            <com.petrodevelopment.copdapp.views.NonScrollableGridView xmlns:android="http://schemas.android.com/apk/res/android"
                      android:id="@+id/gallery"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:columnWidth="90dp"
                      android:numColumns="auto_fit"
                      android:verticalSpacing="@dimen/box_top_and_bottom_padding"
                      android:horizontalSpacing="@dimen/box_top_and_bottom_padding"
                      android:stretchMode="columnWidth"
                      android:gravity="center"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" android:layout_gravity="center_horizontal">

                <ImageButton
                    android:id="@+id/mic_btn"
                    android:background="@drawable/white_button"
                    android:src="@drawable/ic_mic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageButton
                    android:id="@+id/camera_btn"
                    android:background="@drawable/white_button"
                    android:src="@drawable/ic_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageButton
                    android:id="@+id/reminder_btn"
                    android:background="@drawable/white_button"
                    android:src="@drawable/ic_reminder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/line_horizontal"/>
    </LinearLayout>

    <include layout="@layout/line_vertical"/>
</LinearLayout>